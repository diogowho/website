---
import "../styles/globals.css";

interface Props {
  title: string;
  showBackLink?: boolean;
  bodyClass?: string;
  mainClass?: string;
}

const {
  title,
  showBackLink = false,
  bodyClass = "flex min-h-screen items-center justify-center p-8",
  mainClass = "w-full max-w-[600px]",
} = Astro.props;
const pageTitle = title === "Diogo Castro" ? title : `${title} | Diogo Castro`;
---

<html
  lang="en"
  class="font-mono text-sm leading-normal"
  style="color-scheme: light dark;"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <slot name="head" />
  </head>
  <body class={bodyClass}>
    <main class={mainClass}>
      <slot name="header">
        <header class="mb-6">
          <h1 class="text-2xl font-normal tracking-tighter">{title}</h1>
          {
            showBackLink && (
              <a href="/" class="text-[#888888] hover:underline">
                ‚Üê Back to home
              </a>
            )
          }
        </header>
      </slot>
      <slot />
    </main>
  </body>
</html>
